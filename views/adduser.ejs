
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add Product</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/users" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="user[name]" placeholder="Product Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="user[password]" placeholder="password" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[city]" placeholder="city" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add Product</button>
                </div>
            </form>
            <a href="/products">Go Back</a>
        </div>
    </div>
</div>